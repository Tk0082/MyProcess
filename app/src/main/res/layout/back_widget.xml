<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/widget"
	android:background="@drawable/back_widget" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_margin="3dp"
		android:padding="2dp"
		android:gravity="center"
		android:background="@color/transparent" >
		<TextView
			android:id="@+id/txtitulo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="8sp"
			android:padding="5dp"
			android:textStyle="bold"
			android:text="Informações de Rede"
			android:textColor="@color/limed"
			android:textAlignment="center"
			android:textIsSelectable="true"
			android:fontFamily="@font/SourceCodePro-Medium"
			/>
		<TextView
			android:id="@+id/txifcfg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:weightSum="1"
			android:textSize="8sp"
			android:padding="5dp"
			android:textColor="@color/limel"
			android:textAlignment="center"
			android:textIsSelectable="true"
			android:fontFamily="@font/SourceCodePro-Medium"
			/>
	</LinearLayout>
</RelativeLayout>